# Enemy definitions
# Each enemy (except rat) has a unique gimmick/mechanic

@rat {
    name: "Dungeon Rat"
    glyph: "r"
    hp: 6
    damage: 1
    defense: 0
    ai: "basic"
    gold_drop: 1
    image_path: "resources/assets/enemies/rat.png"
    color: [150, 120, 80, 255]
    description: "A dusty, angry, murky rat."
}

@rat_king {
    name: "Rat King"
    glyph: "R"
    hp: 10
    damage: 2
    defense: 1
    ai: "basic"
    description: "A bloated rat draped in filth. Its tangled crown of tails marks it as king."
    gold_drop: 8
    drop_item: ""
    image_path: ""
    color: [200, 170, 80, 255]
}

@skeleton {
    name: "Skeleton Archer"
    glyph: "s"
    hp: 4
    damage: 2
    defense: 0
    ai: "ranged_telegraph"
    telegraph_turns: 1
    range: 5
    gold_drop: 1
    image_path: "resources/assets/enemies/skeleton.png"
    color: [220, 220, 200, 255]
    description: "A brittle skeleton archer."
}

@slime {
    name: "Acid Slime"
    glyph: "j"
    hp: 3
    damage: 1
    defense: 0
    ai: "basic"
    image_path: "resources/assets/enemies/acid_slime.png"
    on_death: "poison_pool"
    pool_duration: 3
    pool_damage: 1
    gold_drop: 1
    color: [50, 220, 50, 255]
    description: "Easy to kill but leaves a poison pool on death for 3 turns."
}
